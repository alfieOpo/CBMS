<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="absnitsolution.modifiedcommunitybasemonitoringsystem._J_Question">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="65. Noong nakaraang labing-dalawang buwan, kayo ba o sinuman sa inyong pamilya  ay nagpapagamot upang malunasan ang sakit? " />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/cbo_a_miyembro_nagpagamot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:tag="D_029"
                android:textColorHint="#05ab9a"
                android:textSize="10dp"
                app:met_floatingLabel="highlight" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/cbo_a_ilan_nagpagamot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:hint="Ilan?"
                android:tag="D_030"
                android:textColorHint="#05ab9a"
                android:textSize="14dp"
                app:met_floatingLabel="highlight" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="66. Sa huling pagkakasakit ng sinumang miyembro ng pamilya, saan kayo nagpagamot upang malunasan ang sakit?" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/cbo_j_66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:tag="D_040"
                android:textColorHint="#05ab9a"
                android:textSize="16dp"
                app:met_floatingLabel="highlight" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_j_ibapa_66"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Iba pa, itala"
                    android:inputType="textPersonName"
                    android:tag="D_041"
                    android:textColorHint="#05ab9a"
                    android:textSize="14dp" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="67. May miyembro ba ng pamilya na sumasailalim sa ____? " />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/cbo_j_67"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:tag="D_042"
                android:textColorHint="#05ab9a"
                android:textSize="16dp"
                app:met_floatingLabel="highlight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pnl_next_and_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/back_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"

                        card_view:cardCornerRadius="5dp"
                        card_view:cardElevation="10dp"
                        card_view:cardMaxElevation="10dp">

                        <ImageButton
                            android:id="@+id/btn_back"
                            android:layout_width="50dp"
                            android:layout_height="50dp"

                            android:layout_alignParentBottom="true"
                            android:layout_weight="1"

                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:src="@drawable/left"
                            android:text="Back" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/next_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        card_view:cardCornerRadius="5dp"
                        card_view:cardElevation="10dp"
                        card_view:cardMaxElevation="10dp">

                        <ImageButton
                            android:id="@+id/btn_next"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:src="@drawable/right"
                            android:text="Nex" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>